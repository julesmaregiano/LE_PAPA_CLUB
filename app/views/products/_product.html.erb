    <div class="card-design">
      <%= link_to product.link, target: :_blank do %>
        <div class="article-top">
          <h3><%= product.name %></h3>
        </div>
        <div class="article-preview text-center">
          <% if product.image_small_url? %>
            <%= image_tag product.image_small_url, class: 'product-image' %>
          <% end %>
          <p><%= product.subtitle %></p>
        </div>
      <% end %>
    </div>
