<% if @post.errors.any? %>
  // handle validation errors later
<% else %>
  const postsContainer = document.querySelector('.posts');
  postsContainer.insertAdjacentHTML('beforeend', '<%= j render "post", post: @post, user_is_posts_author: true %>');
  const input = document.querySelector('#post_content');
  input.value = '';
  scrollLastPostintoView();
  document.querySelector('#post_content');
  document.querySelector('#closeModale').click();
<% end %>
