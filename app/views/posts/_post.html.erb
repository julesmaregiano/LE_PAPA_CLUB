<%= link_to chat_room_post_path(post.chat_room, post) do %>
  <div class="post <%= user_is_posts_author ? "right" : "" %>">

    <div class="post-top">
      <img class="avatar-large"src="https://www.fillmurray.com/200/200" alt="">
      <div>
        <div class="card-author">
          <p><%= post.user.first_name %></p>
          <p><%= post.user.babies.size %> morveux</p>
        </div>
      </div>
      <p>Il y a <%=((Time.now - post.created_at)).to_i / 60%> min</p>
    </div>

    <div class="post-content">
      <p><%= post.content %></p>
    </div>

    <div class="post-bottom">
      <h5><%= post.messages.size %> messages</h5>
      <i class="fa fa-comment"></i>
    </div>
  </div>

<% end %>
