<% if post.user.profile_pic? %>
  <%= cl_image_tag post.user.profile_pic.path, width: 50, height: 50, crop: :fill, class: "avatar-medium" %>
<% else avatar_url = post.user.facebook_picture_url || "https://www.fillmurray.com/200/200" %>
  <img class="avatar-large" src=<%= avatar_url %> alt="">
<% end %>
