<div class="navbar">
  <div class="fixed-top flex-horizontal">
    <%= link_to :back do %>
      <i class="fa fa-arrow-left back-btn"></i>
    <% end %>
    <h1 id="logo-cdd">Le Club des Darons</h1>
    <div class="navbar-item">
       <div class="dropdown">
         <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <% if user_signed_in? %>
          <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to articles_path do %>
                <i class="fa fa-thumbs-up"></i> <%= t(".profile", default: "Conseils") %>
              <% end %>
            </li>
            <li>
              <%= link_to chat_room_path(ChatRoom.first) do %>
                <i class="fa fa-users"></i> <%= t(".profile", default: "Chat des Darons") %>
              <% end %>
            </li>
            <li>
              <%= link_to types_path do %>
                <i class="fa fa-magic"></i> <%= t(".profile", default: "Télécommande magique") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i> <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
          <% else %>
            <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
              <li>
                <%= link_to t(".sign_in", default: "Login"), new_user_session_path %>
              </li>
              <li>
                <%= link_to t(".sign_in", default: "Rejoindre les Darons"), new_user_registration_path %>
              </li>
            </ul>
          <% end %>
      </div>
    </div>
  </div>
</div>
