<div class="flex-horizontal">
  <% @chat_rooms.each do |chat_room| %>
    <%= link_to chat_room_path(chat_room) do %>
      <div class="square-card flex-row"
           style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0)), url('<%= cl_image_path chat_room.photo.path, height: 100, width: 100, crop: :fill %>')">
        <h1><%= chat_room.name %></h1>
      </div>
    <% end %>
  <% end %>
</div>
