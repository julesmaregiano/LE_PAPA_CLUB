<div class="flex-horizontal carousel">
  <% @chat_rooms.each do |chat_room| %>
    <%= link_to chat_room_path(chat_room) do %>
      <div class="square-card flex-row"
           style="background-image: linear-gradient(rgba(255,255,255,0.2), rgba(255,255,255,0.4)), url('<%= cl_image_path chat_room.photo.path, height: 100, width: 100, crop: :fill %>')">
        <h2><%= chat_room.name %></h2>
      </div>
    <% end %>
  <% end %>
</div>
