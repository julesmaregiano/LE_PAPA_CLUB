<div class="container carousel">
  <% if @user.profile_pic? %>
    <%= cl_image_tag @user.profile_pic.path, width: 250, height: 250, crop: :fill, class: "avatar-medium" %>
  <% else avatar_url = @user.facebook_picture_url || "https://www.fillmurray.com/250/250" %>
    <img class="avatar-profile" src=<%= avatar_url %> alt="">
  <% end %>
  <div class="card-design">
    <h2><%= @user.first_name %> <%= @user.last_name %></h2>
    <p></p>
    <p><%= @user.email %></p>
  </div>
  <div class="card-design">
    <h2>Votre mioche</h2>
    <p><%= @user.babies %></p>
  </div>

  <div class="my-likes card-design">
    <% @posts.each do |post| %>
      <p><%= post.content %></p>
    <% end %>
  </div>
</div>
