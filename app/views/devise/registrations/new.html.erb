<div class="form-registration">

  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, label: "Un mail (pour quand vous perdrez le password)" %>
      <%= f.input :first_name, required: false, label: "Un prénom (ou un pseudo) pour vous retourner quand on vous appelera" %>
      <%= f.input :last_name, required: false, label: "Un nom de famille si vous vous appelez Guillaume ou Sébastien" %>
      <%= f.input :password, required: true, label: "Le mot de passe", hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true, label: "Confirmation du mot de passe" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
